.row-wg.justify-content-center
	.col-md-8
		.card.border-primary
			.card-header.bg-primary
				h2.text-white = @component.singularize
			.card-body
				= simple_form_for @component do |f|
					- f.error_notification
					= f.input :name
					= f.association :gear, label_method: :to_s
					= f.button :submit
