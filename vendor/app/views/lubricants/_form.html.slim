.row-wg.justify-content-center
	.col-md-8
		.card.border-primary
			.card-header.bg-primary
				h2.text-white = @lubricant.singularize
			.card-body
				= simple_form_for @lubricant do |f|
					- f.error_notification
					= f.input :name
					= f.input :max_hours
					.form-group.row
						label.col-sm-3.col-form-label
							= Variable.pluralize
						.col-sm-9
							= f.simple_fields_for :variables do |variable|
								= render 'variable_fields', f: variable
							.links
								= link_to_add_association f, :variables
									= icon 'new'
									span = Variable.singularize
					= f.button :submit
