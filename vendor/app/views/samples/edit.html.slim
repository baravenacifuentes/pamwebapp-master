= header_generator @sample, 'edit'
.row-wg.justify-content-center
	.col-md-8
		.card.border-primary
			.card-header.bg-primary
				h2.text-white = @sample.singularize
			.card-body
				= simple_form_for @sample do |f|
					- f.error_notification
					= f.input :sample_code
					= f.input :lab_code
					= f.association :unit, label_method: :to_s
					= f.input :lubricant
					= f.input :taked_at
					= f.input :received_at
					= f.input :reported_at
					= f.button :submit
